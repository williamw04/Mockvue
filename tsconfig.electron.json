{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "outDir": "dist-electron",
    "outFile": null,
    "rootDir": "electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "dist", "dist-electron"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}

